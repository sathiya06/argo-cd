{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Rules specific to the manifest files",
  "packageRules": [
    {
      "description": "Enable updates for Dex docker image",
      "matchFileNames": ["**/*.yaml", "**/*.yml"],
      "matchDatasources": ["docker"],
      "matchPackageNames": ["ghcr.io/dexidp/dex"],
      "enabled": true
    }
  ]
}



